# TruMate Automation Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Frontend Configuration
FRONTEND_URL=http://localhost:3001

# Database Configuration (when implemented)
# MONGODB_URI=mongodb://localhost:27017/trumate_automation
# MONGODB_TEST_URI=mongodb://localhost:27017/trumate_automation_test

# Security Configuration
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRE=7d
BCRYPT_ROUNDS=12

# API Keys (for future integrations)
# OPENAI_API_KEY=your_openai_api_key
# GOOGLE_CLOUD_API_KEY=your_google_cloud_api_key
# NUTRITIONIX_API_KEY=your_nutritionix_api_key

# Hardware Integration (for future use)
# ARDUINO_PORT=/dev/ttyUSB0
# RASPBERRY_PI_HOST=192.168.1.100
# SENSOR_POLLING_INTERVAL=1000

# Automation Configuration
DEFAULT_AUTOMATION_LEVEL=manual
ENABLE_SENSOR_SIMULATION=true
ENABLE_HARDWARE_INTEGRATION=false

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_MAX_SIZE=5242880
LOG_FILE_MAX_FILES=5

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_STRICT_MAX=20

# File Upload Configuration
MAX_FILE_SIZE=10485760
MAX_FILES_PER_REQUEST=5
UPLOAD_PATH=./uploads

# Analytics Configuration
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=90

# Email Configuration (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password

# External Services
# WEATHER_API_KEY=your_weather_api_key
# GROCERY_API_KEY=your_grocery_api_key

# Development Configuration
ENABLE_CORS=true
ENABLE_MORGAN_LOGGING=true
ENABLE_HELMET_SECURITY=true

# Testing Configuration
TEST_TIMEOUT=10000
TEST_COVERAGE_THRESHOLD=80

# Performance Configuration
REQUEST_TIMEOUT=30000
KEEP_ALIVE_TIMEOUT=5000

# Feature Flags
FEATURE_RECIPE_OPTIMIZATION=true
FEATURE_AUTOMATION_ASSESSMENT=true
FEATURE_NUTRITIONAL_ANALYSIS=true
FEATURE_COST_ANALYSIS=false
FEATURE_SUSTAINABILITY_METRICS=true
FEATURE_MEAL_PLANNING=false
FEATURE_SHOPPING_LIST=false

# Internal API Configuration
INTERNAL_API_KEY=your_internal_api_key_for_service_communication

# Monitoring Configuration
# SENTRY_DSN=your_sentry_dsn
# NEW_RELIC_LICENSE_KEY=your_new_relic_key

# Cache Configuration
CACHE_TTL=3600
ENABLE_REDIS_CACHE=false
# REDIS_URL=redis://localhost:6379

# Backup Configuration
ENABLE_AUTO_BACKUP=false
BACKUP_INTERVAL_HOURS=24
# BACKUP_S3_BUCKET=your_backup_bucket
